@model LibraryManager.Models.BookTheme

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Tema</h1>

<h3>Tem certeza que deseja deletar este tema?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Theme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theme)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IndAtivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IndAtivo)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </form>
</div>
