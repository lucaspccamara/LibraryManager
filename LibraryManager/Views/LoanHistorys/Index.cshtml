@model IEnumerable<LibraryManager.Models.LoanHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Empréstimos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastro</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="table-primary">
            <th class="col-2">
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th class="col-3">
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndAtivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanDateStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDeadlineStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IndAtivo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
