@model LibraryManager.Models.ViewModels.LoanHistoryEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LoanHistory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LoanHistory.Id" />
            <div class="form-group">
                <label asp-for="LoanHistory.UserId" class="control-label"></label>
                <input asp-for="Users.Name" readonly class="form-control">
                <span asp-validation-for="LoanHistory.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanHistory.BookId" class="control-label"></label>
                <input asp-for="Books.BookName" readonly class="form-control">
                <span asp-validation-for="LoanHistory.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanHistory.LoanDate" class="control-label"></label>
                <input asp-for="LoanHistory.LoanDate" class="form-control" />
                <span asp-validation-for="LoanHistory.LoanDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
