@using LibraryManager.Models.Enums
@model LibraryManager.Models.ViewModels.LoanHistoryFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de Empréstimo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanHistory.UserId" class="control-label"></label>
                <select asp-for="LoanHistory.UserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "Name"))">
                    <option value="" disabled selected hidden>Selecione um usário</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LoanHistory.BookId" class="control-label"></label>
                <select asp-for="LoanHistory.BookId" class="form-control" asp-items="@(new SelectList(Model.Books, "Id", "BookName"))">
                    <option value="" disabled selected hidden>Selecione um livro</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LoanHistory.LoanDate" class="control-label"></label>
                <input asp-for="LoanHistory.LoanDate" class="form-control" type="date" />
                <span asp-validation-for="LoanHistory.LoanDate" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Gravar" class="btn btn-success" /> |
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
