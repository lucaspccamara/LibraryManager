@model IEnumerable<LibraryManager.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Livros</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar Livro</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateStr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedDateStr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedDateStr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndAtivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theme.Theme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDateStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedDateStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeletedDateStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IndAtivo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
